{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "DOCKERFILE",
      "buildCommand": "yarn build",
      "watchPatterns": [
        "/"
      ]
    },
    "deploy": {
      "numReplicas": 1,
      "startCommand": "yarn prod",
      "sleepApplication": false,
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 2
    }
  }